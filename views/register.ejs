<body>
    <h1 class="user mt-5">Create New account</h1>
    <div class="user mt-2">
        <div class="user-box">
            <form action="/new" method="POST" id="register-form">
                <div id="name-box" class="mb-3">
                    <label for="new-name" class="form-label white">Name : </label>
                    <input type="text" id="new-name" placeholder="Enter your full name" name="new-name" class="form-control">
                </div>
                <div class="email mb-3">
                    <label for="email" class="form-label white">Email : </label>
                    <input placeholder="Enter your email id" id="email" type="email" name="new-email" class="form-control"/>
                </div>
                <div class="password mb-3">
                    <label for="password" class="form-label white">Password : </label>
                    <input placeholder="Enter your password" id="password" type="password" name="new-password" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
                
            </form>  
            
        </div>
        <a href="/"><button class="btn btn-success">Back to login</button></a>
    </div>
